<div class="shadow bg-white rounded">
  <div class="card border-light mb-3">
    <div class="card-header text-success">Registrar Zona</div>
    <div class="card-body">
      <%= form_for @zone, url: {action: "create"}, method: 'post' do |f| %>
        <div class="form-group row">
          <div class="form-group col-md-6">
            <%= f.label :name, 'Nombre de la Zona' %>
            <%= f.text_field :name, required: true, class: "form-control" %>
          </div>      
        </div>
        <div class="form-group row justify-content-md-center">
          <div class="form-group col-md-6">
            <%= f.label :department, 'Departamento' %>
            <%= collection_select('',:department, Department.all, :id, :name, {prompt: 'Seleccione un Departamento de la lista'}, {class: 'form-control'}) %>
          </div>
          <div class="form-group col-md-6">
            <%= f.label :city, 'Ciudad' %>
            <%= f.grouped_collection_select(:city, Department.order(:name), :cities, :name, :id, :name, {prompt: 'Seleccione un Departamento de la lista'}, {class: 'form-control'})%>
          </div>
        </div>
        <div class="form-group row justify-content-md-end">
          <div class="form-group">
            <%= f.submit "Registrar", class: "btn btn-success", id: "submit"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
