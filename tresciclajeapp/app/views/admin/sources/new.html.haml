.shadow.bg-white.rounded
  .card.border-light.mb-3
    .card-header.text-success
      Registrar Fuente
    .card-body    
      = form_for :source, url: {action: "create"}, method: 'post' do |f|
        .form-group.row.justify-content-md-center
          .form-group.col-md-6
            = f.label :name, "Nombre de la Fuente", class: "control-label"
            = f.text_field :name, class: "form-control"
          .form-group.col-md-6
            = f.label :kind, "Tipo de Fuente", class: "control-label"
            = select_tag(:kind, options_for_select([['Conjunto','Conjunto'],['Empresa','Empresa']],'Conjunto'), { class: "form-control"})
        .form-group.row.justify-content-md-start
          .form-group.col-md-6
            = f.label :address, "Direccion Conjunto", class: "control-label"
            = f.text_field :address, class: "form-control"
          .form-group.col-md-6
            = f.label :zone_id, 'Zona'
            = f.collection_select(:zone_id, Zone.all, :id, :name, {prompt: 'Seleccione un Departamento de la lista'}, {class: 'form-control'})
        .form-group.row.justify-content-md-center
          .form-group.col-md-4
            = f.label :number_of_floors, "Numero de Pisos", class: "control-label"
            = f.number_field :number_of_floors, class: "form-control"
          .form-group.col-md-4
            = f.label :apt_per_floor, "Numero de apt por Piso", class: "control-label"
            = f.number_field :apt_per_floor, class: "form-control"
          .form-group.col-md-4
            = f.label :blocks, "Numero de Bloques", class: "control-label"
            = f.number_field :blocks, class: "form-control"     
        .form-group.row.justify-content-md-center
          .form-group.col-md-6
            = f.label :admin_name, "Nombre Administrador Encargado", class: "control-label"
            = f.text_field :admin_name, class: "form-control"
          .form-group.col-md-6
            = f.label :amount_of_people, "Numero de Residentes", class: "control-label"
            = f.number_field :amount_of_people, class: "form-control"
        .form-group.row.justify-content-md-end
          .form-group.col-md-6
            = button_tag( :class => "btn btn-success") do
              %i.material-icons present_to_all
              Guardar
